@using System.Security.Policy
@model IEnumerable<AbcMovies.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Movies</h3>
@if (!Model.Any())
{
    <p>We have not added movies yet</p>
}
else
{
    @Html.ActionLink("New Movie", "New", "Movie", new { @class = "btn btn-primary" })
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.Name</td>
                    <td>@Html.ActionLink("Edit","Edit","Movies",new  { id = movie.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}

